<div class="container">
<form method="post" action="http://localhost:3000/addUser">
  <fieldset>
    <legend>ENTER YOUR DETAILS</legend>
    <div class="form-group row">
      <label for="id" class="col-sm-2 col-form-label">Employee id</label>
      <div class="col-sm-10">
        <input type="text" class="form-control-plaintext" id="id" value="Id will be automatically assigned to you" name="id" readonly="">
      </div>
    </div>
    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label">Employee Name</label>
      <div class="col-sm-10">
        <input type="text" class="form-control-plaintext" id="name" value="Enter Your Name" name="name">
      </div>
    </div>
    <div class="form-group row">
      <label for="Email" class="col-sm-2 col-form-label">Employee Email</label>
      <div class="col-sm-10">
        <input type="text" class="form-control-plaintext" id="Email" value="Enter Your email" name="email">
      </div>
    </div>
    <div class="form-group row">
      <label for="city" class="col-sm-2 col-form-label">City</label>
      <div class="col-sm-10">
        <input type="text" class="form-control-plaintext" id="city" value="Enter Your City" name="city">
      </div>
    </div>
    <div class="form-group row">
      <label for="phone" class="col-sm-2 col-form-label">Contact number</label>
      <div class="col-sm-10">
        <input type="text" class="form-control-plaintext" id="phone" value="Enter Your Phone Number" name="phone">
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="http://localhost:3000/showAllUser" class="btn btn-lg btn-success">Show All Users</a>
  </fieldset>
</form>
</div>